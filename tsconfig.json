{
    "compilerOptions": {
        "module": "es2015",
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "bin",
        "node_modules"
    ]
}
